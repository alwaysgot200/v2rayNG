      "command": "sh",
      "args": [
        "-lc",
        "cd ./v2plus && ./gradlew :app:setupJdwpForwardFdroid -PskipEmulatorStart=true -PjdwpPort=${V2PLUS_JDWP_PORT:-8701}"
